{
  "name": "csvg-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .ts packages/*/src/**.ts",
    "build-csvg": "rimraf packages/csvg/dist && rollup -c",
    "build-explorer": "cd packages/explorer && pnpm build",
    "build-docs": "cd docs && pnpm docs:build",
    "build-vscode": "cd packages/vscode-csvg && pnpm compile",
    "build": "run-s build-csvg build-explorer build-vscode",
    "dev-explorer": "cd packages/explorer && pnpm dev",
    "preview-explorer": "cd packages/explorer && vite preview --open",
    "watch-vscode": "cd packages/vscode-csvg && pnpm watch",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path .",
    "format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\""
  },
  "author": "Luo Zhihao",
  "license": "MIT",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^8.4.0",
    "eslint-define-config": "^1.2.0",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  }
}